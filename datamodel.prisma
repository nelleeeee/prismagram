type User {
  id: ID! @id
  lastName: String
  firstName: String @default(value: "")
  posts: [Post!]!
  bio: String
  likes: [Like!]!
  comments: [Comment!]!
  username: String! @unique
  email: String! @unique
  following: [User!]! @relation(name: "FollowRelation")
  followers: [User!]! @relation(name: "FollowRelation")
}

type Post {
  id: ID! @id
  files: [File!]!
  location: String
  user: User!
  caption: String!
  likes: [Like!]!
  comments: [Comment!]!
}

type Like {
  id: ID! @id
  user: User!
  post: Post!
}

type Comment {
  id: ID! @id
  text: String!
  user: User!
  post: Post!
}

type File {
  id: ID! @id
  url: String!
  post: Post!
}
